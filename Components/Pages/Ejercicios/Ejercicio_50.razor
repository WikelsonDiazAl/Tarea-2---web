@code {
    private int[,] matriz = new int[5, 5];
    private int numeroMasRepetido = 0;
    private int frecuenciaMaxima = 0;
    private void CalcularValorMasRepetido()
    {
        Dictionary<int, int> contador = new Dictionary<int, int>();

        for (int i = 0; i < 5; i++)
        {
            for (int j = 0; j < 5; j++)
            {
                int valor = matriz[i, j];
                if (contador.ContainsKey(valor))
                {
                    contador[valor]++;
                }
                else
                {
                    contador[valor] = 1;
                }
            }
        }

        foreach (var kvp in contador)
        {
            if (kvp.Value > frecuenciaMaxima)
            {
                frecuenciaMaxima = kvp.Value;
                numeroMasRepetido = kvp.Key;
            }
        }
    }

    private void Regresar()
    {
        Navigation.NavigateTo("/");
    }
