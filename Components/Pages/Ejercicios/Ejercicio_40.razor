@page "/Ejercicio_40"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>Ejercicio 40</h3>

<div class="form-group">
    <label for="numeros">Introduce 10 números separados por comas</label>
    <input type="text" class="form-control" id="numeros" @bind="numerosTexto" placeholder="Ejemplo: 13,23,33,43,53,63,73,83,93,103" />
</div>

<div class="form-group">
    <label for="digito">Introduce el dígito que deseas buscar</label>
    <input type="number" class="form-control" id="digito" @bind="digito" placeholder="Ejemplo: 3" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="ContarNumerosTerminadosEnDigito">Contar Números Terminados en Dígito</button>
</div>

<p>Cantidad de números que terminan en el dígito @digito: @cantidadTerminadosEnDigito</p>
<button class="btn btn-secondary" @onclick="Regresar">Regresar</button>

@code {
    private string numerosTexto;
    private int digito;
    private int cantidadTerminadosEnDigito = 0;

    private void ContarNumerosTerminadosEnDigito()
    {

        int[] numeros = numerosTexto.Split(',').Select(int.Parse).ToArray();

        if (numeros.Length == 10 && digito >= 0 && digito <= 9)
        {
            cantidadTerminadosEnDigito = numeros.Count(n => n % 10 == digito);
        }
        else
        {
            cantidadTerminadosEnDigito = 0;
        }
    }

    private void Regresar() {
        Navigation.NavigateTo("/");
    }
}
