@page "/Ejercicio_38"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>Ejercicio 38</h3>

<div class="form-group">
    <label for="numeros">Introduce 10 números separados por comas</label>
    <input type="text" class="form-control" id="numeros" @bind="numerosTexto" placeholder="Ejemplo: 13,23,33,43,53,63,73,83,93,103" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="ContarNumerosTerminadosEnTres">Contar Números Terminados en 3</button>
</div>

<p>Cantidad de números que terminan en 3: @cantidadTerminadosEnTres</p>
<button class="btn btn-secondary" @onclick="Regresar">Regresar</button>

@code {
    private string numerosTexto;
    private int cantidadTerminadosEnTres = 0;

    private void ContarNumerosTerminadosEnTres()
    {
        int[] numeros = numerosTexto.Split(',').Select(int.Parse).ToArray();

        if (numeros.Length == 10)
        {
            cantidadTerminadosEnTres = numeros.Count(n => n % 10 == 3);
        }
        else
        {
            cantidadTerminadosEnTres = 0;
        }
    }

    private void Regresar() {
        Navigation.NavigateTo("/");
    }
}
