@page "/Ejercicio_4"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>Ejercicio 4</h3>

<div class="form-group">
    <label for="txtnumero">Número</label>
    <input type="number" class="form-control" id="txtnumero" @bind="numero" />
</div>

<div class="form-group">
    <button class="btn btn-primary calcular-btn" @onclick="Calcular">Calcular</button>
    <p>Cantidad de dígitos pares: @digitosPares</p>
    <button class="btn btn-secondary" @onclick="Regresar">Regresar</button>
</div>

@code {
    private int numero = 0;
    private int digitosPares = 0;

    private void Calcular() {
        digitosPares = ContarDigitosPares(numero);
    }

    private int ContarDigitosPares(int numero) {
        int contador = 0;
        while (numero != 0) {
            int digito = numero % 10; 
            if (digito % 2 == 0) {
                contador++;
            }
            numero /= 10;
        }
        return contador;
    }

    private void Regresar() {
        Navigation.NavigateTo("/");
    }
}
