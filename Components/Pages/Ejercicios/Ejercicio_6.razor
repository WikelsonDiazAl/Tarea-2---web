@page "/Ejercicio_6"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>Ejercicio 6</h3>

<div class="form-group">
    <label for="inputNumero">Ingrese un número (0-255):</label>
    <input type="number" class="form-control" id="inputNumero" @bind="numero" min="0" max="255" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="ObtenerCaracterASCII">Convertir a ASCII</button>
    <p>Carácter correspondiente: <strong>@caracterASCII</strong></p>
    <button class="btn btn-secondary" @onclick="Regresar">Regresar</button>
</div>



@code {
    private int numero; 
    private string caracterASCII = ""; 

    private void ObtenerCaracterASCII()
    {
        if (numero >= 0 && numero <= 255)
        {
            caracterASCII = ((char)numero).ToString();
        }
        else
        {
            caracterASCII = "Número fuera del rango (0-255).";
        }
    }

    private void Regresar() {
        Navigation.NavigateTo("/");
    }
}