@page "/Ejercicio_22"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>Ejercicio 22</h3>

<div class="form-group">
    <label for="txtnumero">NÃºmero</label>
    <input type="number" class="form-control" id="txtnumero" @bind="numero" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="VerificarMultiploDeCinco">Verificar</button>
</div>

<p>Resultado: @resultado</p>
<button class="btn btn-secondary" @onclick="Regresar">Regresar</button>

@code {
    private int numero = 0;
    private int resultado = 0;

    private void VerificarMultiploDeCinco()
    {
        resultado = EsMultiploDeCinco(numero);
    }

    private int EsMultiploDeCinco(int num)
    {
        return num % 5 == 0 ? 1 : 0;
    }

    private void Regresar() {
        Navigation.NavigateTo("/");
    }
}
